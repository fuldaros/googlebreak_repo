<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Menu" />
    <style name="Base.Theme.AppCompat" parent="@style/Base.V23.Theme.AppCompat" />
    <style name="Base.Theme.AppCompat.Light" parent="@style/Base.V23.Theme.AppCompat.Light" />
    <style name="Base.Widget.AppCompat.Button.Borderless.Colored" parent="@android:style/Widget.Material.Button.Borderless.Colored" />
    <style name="Base.Widget.AppCompat.Button.Colored" parent="@android:style/Widget.Material.Button.Colored" />
    <style name="Base.Widget.AppCompat.RatingBar.Indicator" parent="@android:style/Widget.Material.RatingBar.Indicator" />
    <style name="Base.Widget.AppCompat.RatingBar.Small" parent="@android:style/Widget.Material.RatingBar.Small" />
    <style name="Base.Widget.AppCompat.Spinner.Underlined" parent="@android:style/Widget.Material.Spinner.Underlined" />
    <style name="CardView" parent="@style/Base.CardView">
        <item name="cardBackgroundColor">?android:colorBackgroundFloating</item>
    </style>
    <style name="LeftNavRedesignSettingsTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white_action_bar_title_color</item>
        <item name="android:textAppearanceMedium">@style/DarkerMedium</item>
        <item name="android:windowBackground">@color/play_main_background</item>
        <item name="android:statusBarColor">@color/play_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/play_white</item>
        <item name="colorPrimaryDark">@color/play_white</item>
        <item name="uicDelegateToSupportLibAlertDialog">true</item>
    </style>
    <style name="MiniCategoriesItemTitle" parent="@style/PlayPlainText">
        <item name="android:textSize">@dimen/flat_mini_card_title_size</item>
        <item name="android:textColor">@color/play_primary_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:breakStrategy">high_quality</item>
        <item name="android:hyphenationFrequency">full</item>
    </style>
    <style name="SuwThemeGlifV2" parent="@style/SuwThemeGlif">
        <item name="android:colorBackground">@color/suw_glif_background_color_dark</item>
        <item name="android:editTextStyle">@style/SuwEditText</item>
        <item name="android:alertDialogTheme">@style/SuwAlertDialogTheme</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="suwBackgroundBaseColor">?android:colorBackground</item>
        <item name="suwBackgroundPatterned">false</item>
        <item name="suwDividerInsetEnd">?suwMarginSides</item>
        <item name="suwDividerInsetStart">?suwMarginSides</item>
        <item name="suwDividerInsetStartNoIcon">?suwMarginSides</item>
        <item name="suwEditTextBackgroundColor">@color/suw_glif_edit_text_bg_light_color</item>
        <item name="suwGlifHeaderGravity">center_horizontal</item>
        <item name="suwScrollIndicators">bottom|top</item>
    </style>
    <style name="SuwThemeGlifV2.Light" parent="@style/SuwThemeGlif.Light">
        <item name="android:colorBackground">@color/suw_glif_background_color_light</item>
        <item name="android:editTextStyle">@style/SuwEditText</item>
        <item name="android:alertDialogTheme">@style/SuwAlertDialogTheme.Light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="suwBackgroundBaseColor">?android:colorBackground</item>
        <item name="suwBackgroundPatterned">false</item>
        <item name="suwDividerInsetEnd">?suwMarginSides</item>
        <item name="suwDividerInsetStart">?suwMarginSides</item>
        <item name="suwDividerInsetStartNoIcon">?suwMarginSides</item>
        <item name="suwEditTextBackgroundColor">@color/suw_glif_edit_text_bg_light_color</item>
        <item name="suwGlifHeaderGravity">center_horizontal</item>
        <item name="suwScrollIndicators">bottom|top</item>
    </style>
    <style name="Base.V23.Theme.AppCompat" parent="@style/Base.V22.Theme.AppCompat">
        <item name="actionBarItemBackground">?android:actionBarItemBackground</item>
        <item name="actionMenuTextAppearance">?android:actionMenuTextAppearance</item>
        <item name="actionMenuTextColor">?android:actionMenuTextColor</item>
        <item name="controlBackground">@drawable/abc_control_background_material</item>
        <item name="ratingBarStyleIndicator">?android:ratingBarStyleIndicator</item>
        <item name="ratingBarStyleSmall">?android:ratingBarStyleSmall</item>
    </style>
    <style name="Base.V23.Theme.AppCompat.Light" parent="@style/Base.V22.Theme.AppCompat.Light">
        <item name="actionBarItemBackground">?android:actionBarItemBackground</item>
        <item name="actionMenuTextAppearance">?android:actionMenuTextAppearance</item>
        <item name="actionMenuTextColor">?android:actionMenuTextColor</item>
        <item name="controlBackground">@drawable/abc_control_background_material</item>
        <item name="ratingBarStyleIndicator">?android:ratingBarStyleIndicator</item>
        <item name="ratingBarStyleSmall">?android:ratingBarStyleSmall</item>
    </style>
</resources>
