<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill" android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size android:height="2.0dip" />
            <solid android:color="@color/loading_progressbar_background" />
        </shape>
    </item>
    <item android:gravity="fill" android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="2.0dip" />
                <solid android:color="#77ffffff" />
            </shape>
        </scale>
    </item>
    <item android:gravity="fill" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="2.0dip" />
                <solid android:color="@color/loading_progressbar" />
            </shape>
        </scale>
    </item>
</layer-list>