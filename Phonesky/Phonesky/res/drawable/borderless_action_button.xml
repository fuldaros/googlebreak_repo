<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/play_transparent" />
            <corners android:radius="@dimen/play_action_button_corner" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true" android:drawable="@drawable/borderless_action_button_highlighted" />
            <item android:state_checked="true" android:drawable="@drawable/borderless_action_button_highlighted" />
            <item android:state_focused="true" android:state_window_focused="true" android:drawable="@drawable/borderless_action_button_highlighted" />
        </selector>
    </item>
</layer-list>